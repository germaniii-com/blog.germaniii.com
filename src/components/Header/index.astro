---
import HeaderLink from '../HeaderLink/index.astro';
import { SITE_TITLE, socialLinks } from '../../consts';

import './index.css';
---

<header>
	<nav>
		<a class="site-title" href="https://blog.germaniii.com">{SITE_TITLE}</a>
		<div class="internal-links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/blog">Wiki</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
		</div>
		<div class="social-links">
			{socialLinks.map(social => (
			<a href={social.link} target="_blank">
				<span class="sr-only">{social.description}</span>
				<img width="32" height="32" src={social.image}/>
			</a>
				)
			)}
		</div>
	</nav>
</header>
